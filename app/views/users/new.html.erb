<section class="container">
  <%= form_with url: '/signup', class: 'form' do |form| %>
    <ul>
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="error"><%= msg %></li>
        <% end %> 
      <% end %>
    </ul>
    <div class="form__input-box">
      <%= form.label :username, class: 'form__label' %>
      <%= form.text_field :username, class:"form__input" %>
    </div>
    <div class="form__input-box">
      <%= form.label :email, class: 'form__label' %>
      <%= form.email_field :email, class:"form__input" %>
    </div>
    <div class="form__input-box">
      <%= form.label :password, class: 'form__label' %>
      <%= form.password_field :password, class:"form__input" %>
    </div>
    <div class="form__input-box">
      <%= form.label :store, class: 'form__label' %>
      <%= form.collection_select :store_name, Store.all, :name, :name, { include_blank: 'Select a store' } , { class: 'form__select' } %>
    </div>
    <%= form.submit 'Create!', class: 'form__button' %>
    <%= link_to 'or login with existing user', login_path, class: 'form__link' %>
  <% end %>
</section>